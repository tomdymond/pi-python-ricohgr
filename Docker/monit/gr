check process piricohmotoServiceMain
    DEPENDS on service redis
    with pidfile "/var/run/piricohmotoServiceMain.pid"
    start program = "/opt/pi-python-ricohgr/bin/piricohmotoServiceMain.py start"
    stop program = "/opt/pi-python-ricohgr/bin/piricohmotoServiceMain.py stop"
    if 2 restarts within 3 cycles then timeout
